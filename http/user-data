#cloud-config
autoinstall:
  version: 1
  identity:
    hostname: ubuntu-dev
    username: packer
    password: packer  # Make this match exactly with ssh_password in pkr.hcl
  ssh:
    install-server: true
    allow-pw: true
  packages:
    - openssh-server
  late-commands:
    - sed -i 's/^#*\(PasswordAuthentication\).*/\1 yes/' /target/etc/ssh/sshd_config
    - systemctl enable ssh